<h1>商品一覧(全<%= @item_count %>件)</h1>

<% @items.each do |item| %>
  <% if item.image.attached? %>
    <%= image_tag item.image, size: "50x50" %>
  <% else %>
    <%= image_tag 'no_image', size: "50x50" %>
  <% end %>
  <p><%= link_to item.name, item_path(item) %></p>
  <p>¥<%= item.add_tax_price.to_s(:delimited) %></p>
<% end %>

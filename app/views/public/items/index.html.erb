<div class="container mt-4">
  <h1 class="mb-4">商品一覧(全<%= @item_count %>件)</h1>
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <% if item.image.attached? %>
              <%= image_tag item.image, size: "100%x200", class: "card-img-top" %>
            <% else %>
              <%= image_tag 'no_image', size: "100%x200", class: "card-img-top" %>
            <% end %>
            <h5 class="card-title mt-2"><%= link_to item.name, item_path(item) %></h5>
            <p class="card-text">¥<%= item.add_tax_price.to_s(:delimited) %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="d-flex justify-content-center mt-4">
    <%= paginate @items, bootstrap: 4 %>
  </div>
</div>

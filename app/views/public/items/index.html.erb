<div class="container mt-4">
  <h1 class="text-center mb-4">商品一覧 (全<%= @item_count %>件)</h1>
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
          <%= link_to item_path(item) do %>
            <% if item.image.attached? %>
              <%= image_tag item.image, class: "card-img-top" %>
            <% else %>
              <%= image_tag 'no_image', class: "card-img-top" %>
            <% end %>
          <% end %>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= link_to item.name, item_path(item), class: "text-dark" %></h5>
            <p class="card-text mt-auto">¥<%= item.add_tax_price.to_s(:delimited) %></p>
            <a href="<%= item_path(item) %>" class="btn btn-primary btn-sm mt-2">詳細を見る</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-center mt-4">
    <%= paginate @items, bootstrap: 4 %>
  </div>
</div>

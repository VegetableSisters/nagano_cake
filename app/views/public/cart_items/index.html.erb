<div class="container">
  <div class="row">
    <div class="col text-center">
      <h2 class="mt-4 mb-4">ショッピングカート</h2>
    </div>
  </div>
  <table class="table table-hover">
    <thead class="thead-light">
      <tr>
        <th>商品名</th>
        <th>単価</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% if @cart_items.present? %>
        <% total_price = 0 %>
        <% @cart_items.each do |cart_item| %>
          <% subtotal = cart_item.amount * cart_item.item.add_tax_price %>
          <% total_price += subtotal %>
          <tr>
            <td>
              <%= image_tag cart_item.item.image, size: "50x50" if cart_item.item.image.attached? %>
              <%= cart_item.item.name %>
            </td>
            <td><%= cart_item.item.add_tax_price.to_s(:delimited) %>円</td>
            <td>
              <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch, html: { class: "form-inline" } do |f| %>
                <%= f.select :amount, options_for_select(1..10, cart_item.amount), {}, { class: 'form-control form-control-sm mr-2', style: 'width: auto; font-weight: bold;' } %>
                <%= f.submit "変更", class: "btn btn-success" %>
              <% end %>
            </td>
            <td><%= subtotal.to_s(:delimited) %>円</td>
            <td>
              <%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger", data: { confirm: "本当に削除しますか？" } %>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="5" class="text-center">カートに商品がありません</td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="row">
    <div class="col-md-6 offset-md-6">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>合計金額</th>
            <td><%= total_price.to_s(:delimited) %>円</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="text-center mt-4">
    <div class="btn-toolbar" role="toolbar">
      <% if @cart_items.present? %>
        <div class="btn-group mr-2" role="group">
          <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class: "btn btn-danger", data: { confirm: "本当に全て削除しますか？" } %>
        </div>
        <div class="btn-group mr-2" role="group">
          <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
        </div>
      <% end %>
      <div class="btn-group" role="group">
        <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>

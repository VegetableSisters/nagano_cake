<div class="container">
  <div class="row">
    <div class="col text-center">
      <h2 class="mt-4 mb-4">ショッピングカート</h2>
    </div>
  </div>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価</th>
        <th>数量</th>
        <th>小計</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% if @cart_items.present? %>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= image_tag cart_item.item.image, size: "50x50" if cart_item.item.image.attached? %>
              <%= cart_item.item.name %>
            </td>
            <td>¥<%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
            <td>
              <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch, html: { class: "form-inline" } do |f| %>
                <%= f.number_field :amount, in: 1..10, class: "form-control mr-2" %>
                <%= f.submit "変更", class: "btn btn-success" %>
              <% end %>
            </td>
            <td>¥<%= (cart_item.amount * cart_item.item.add_tax_price).to_s(:delimited) %></td>
            <td>
              <%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger", data: { confirm: "本当に削除しますか？" } %>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="5" class="text-center">カートに商品がありません</td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-center mt-4">
    <div class="btn-toolbar" role="toolbar">
      <% if @cart_items.present? %>
        <div class="btn-group mr-2" role="group">
          <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, class: "btn btn-danger" %>
        </div>
        <div class="btn-group mr-2" role="group">
          <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
        </div>
      <% end %>
      <div class="btn-group" role="group">
        <%= link_to "買い物を続ける", items_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
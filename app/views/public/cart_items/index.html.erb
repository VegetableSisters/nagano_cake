<div class="container">
  <div class="row">
    <div class="col text-center">
      <strong class="mr-2">ショッピングカート</strong>
    </div>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
  
    <tbody>
      <% if @cart_items.present? %>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= image_tag cart_item.item.image, size: "50x50" if cart_item.item.image.attached? %>
              <%= cart_item.item.name %>
            </td>
            <td>¥<%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
            <td>
              <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch do |f| %>
                <%= f.number_field :amount, in: 1..10 %>
                <%= f.submit "更新" %>
              <% end %>
            </td>
            <td>¥<%= (cart_item.amount * cart_item.item.add_tax_price).to_s(:delimited) %></td>
            <td>
              <%= link_to "削除", cart_item_path(cart_item), method: :delete, data: { confirm: "本当に削除しますか？" } %>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="5">カートに商品がありません</td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-center">
  <% if @cart_items.present? %>
    <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, class: "btn btn-danger" %>
    <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
  <% end %>
  <%= link_to "買い物を続ける", items_path, class: "btn btn-primary" %>
  </div>
</div>

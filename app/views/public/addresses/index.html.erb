<h1>配送先登録/一覧</h1>

<%= form_with model: @address, url: '/addresses', method: :post do |f| %>
  <div>郵便番号（ハイフンなし）</div>
  <div><%= f.text_field :postal_code, placeholder: '0000000' %></div>
  <div>住所</div>
  <div><%= f.text_field :address, placeholder: '東京都渋谷区代々木神園町0-0' %></div>
  <div>宛名</div>
  <div><%= f.text_field :name, placeholder: '令和道子' %></div>
  <div><%= f.submit '新規登録' %></div>
<% end %>



<table class="table">
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @addresses.each do |address| %>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td>
        <%= link_to '編集する', edit_address_path(address) %>
        <%= link_to '削除する', addresses_path(address) %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<div class="container mt-4">
  <div class="row">
    <div class="col">
      <strong class="mr-2">配送先登録/一覧</strong>
    </div>
  </div>


  <div class="row my-4">
    <div class="col-lg-6 mx-0">
      <%= form_with model: @address, url: '/addresses', method: :post do |f| %>
        <div class="form-group mx-sm-3 mb-2">
          <P>郵便番号（ハイフンなし）</P>
          <%= f.text_field :postal_code, class: 'form-control', placeholder: '0000000' %>
        </div>
        <div class="form-group mx-sm-3 mb-2">
          <p>住所</p>
          <%= f.text_field :address, class: 'form-control', placeholder: '東京都渋谷区代々木神園町0-0' %>
        </div>
        <div class="form-group mx-sm-3 mb-2">
          <p>宛名</p>
          <%= f.text_field :name, class: 'form-control', placeholder: '令和道子' %>
        </div>
        <div class="text-right">
          <%= f.submit '新規登録', class: 'btn btn-success mx-0' %>
        </div>
      <% end %>
    </div>
  </div>

  <table class="table table-hover table-bordered">
    <thead class="thead-light">
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to '編集する', edit_address_path(address), class: "btn btn-sm btn-success" %>
            <% if address.customer_id == current_customer.id %>
              <%= link_to '削除する', address_path(address), method: :delete, class: "btn btn-sm btn-success" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<h1>配送先登録/一覧</h1>

<%= form_with model: @address, url: '/addresses', method: :post do |f| %>
  <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
  <%= f.text_field :postal_code, placeholder: '0000000' %>
  <%= f.label :address, "住所" %>
  <%= f.text_area :address, placeholder: '東京都渋谷区代々木神園町0-0' %>
  <%= f.label :name, "宛名" %>
  <%= f.text_field :name, placeholder: '令和道子' %>
  <%= f.submit '新規登録' %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
<% @addresses.each do |address| %>
  <tbody>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td>
        <%= link_to '編集する', edit_address_path(address) %>
        <%= link_to '削除する', addresses_path(address) %>
      </td>
    </tr>
  </tbody>
<% end %>
</table>
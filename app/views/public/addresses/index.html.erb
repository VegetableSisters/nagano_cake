<div class="container mt-4">
  <div class="row">
    <div class="col">
      <div><strong class="mr-2">配送先登録/一覧</strong></div>
      <% if @address.errors.any? %>
        <%= @address.errors.count %>件のエラーが発生しました
        <ul>
          <% @address.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
  <div class="row my-4">
    <div class="col-lg-6 mx-0">
      <%= form_with model: @address, url: '/addresses', method: :post do |f| %>
        <div class="form-group mb-2">
          <label for="postal_code">郵便番号（ハイフンなし）</label>
          <%= f.text_field :postal_code, class: 'form-control', placeholder: '例) 0000000' %>
        </div>
        <div class="form-group mb-2">
          <label for="address">住所</label>
          <%= f.text_field :address, class: 'form-control', placeholder: '例) 長野県長野市大字南長野字幅下692-2' %>
        </div>
        <div class="form-group mb-2">
          <label for="name">宛名</label>
          <%= f.text_field :name, class: 'form-control', placeholder: '例) 山田花子' %>
        </div>
        <div class="text-center">
          <%= f.submit '新規登録', class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
  <table class="table table-hover table-bordered">
    <thead class="thead-light">
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to '編集する', edit_address_path(address), class: "btn btn-success btn-sm " %>
            <% if address.customer_id == current_customer.id %>
              <%= link_to '削除する', address_path(address), method: :delete, class: "btn btn-danger btn-sm ml-2", data: { confirm: "本当に削除しますか？" } %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header text-center">
          <h2 class="mr-2">配送先編集</h2>
        </div>
        <div class="card-body">
          <%= form_with model: @address, url: address_path, method: :patch, class: "form-group" do |f| %>
            <div class="form-group mb-3">
              <label for="name" class="form-label">宛名</label>
              <%= f.text_field :name, class: 'form-control', placeholder: '例) 山田花子', id: 'name' %>
            </div>
            <div class="form-group mb-3">
              <label for="postal_code" class="form-label">郵便番号（ハイフンなし）</label>
              <%= f.text_field :postal_code, class: 'form-control', placeholder: '例) 0000000', id: 'postal_code' %>
            </div>
            <div class="form-group mb-3">
              <label for="address" class="form-label">住所</label>
              <%= f.text_field :address, class: 'form-control', placeholder: '例) 長野県長野市大字南長野字幅下692-2', id: 'address' %>
            </div>
            <div class="text-center">
              <%= f.submit '変更内容を保存', class: 'btn btn-success' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

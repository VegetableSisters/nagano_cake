<div class="container mt-4">
  <div class="row">
    <div class="col">
      <strong class="mr-2">配送先編集</strong>
    </div>
  </div>


  <div class="row my-4">
    <div class="col-lg-6 mx-0">
      <%= form_with model: @address, url: address_path, method: :patch do |f| %>
        <div class="form-group mx-sm-3 mb-2">
          <P>郵便番号（ハイフンなし）</P>
          <%= f.text_field :postal_code, class: 'form-control', placeholder: '0000000' %>
        </div>
        <div class="form-group mx-sm-3 mb-2">
          <p>住所</p>
          <%= f.text_field :address, class: 'form-control', placeholder: '東京都渋谷区代々木神園町0-0' %>
        </div>
        <div class="form-group mx-sm-3 mb-2">
          <p>宛名</p>
          <%= f.text_field :name, class: 'form-control', placeholder: '令和道子' %>
        </div>
        <div class="text-right">
          <%= f.submit '変更内容を保存', class: 'btn btn-success mx-0' %>
        </div>
      <% end %>
    </div>
  </div>
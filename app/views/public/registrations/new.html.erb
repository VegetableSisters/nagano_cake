<div class="container mt-4">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="alert alert-light text-center font-weight-bold bg-secondary text-white" role="alert">
        <p class="mb-0">新規会員登録</p>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="form-group">
          <label for="last_name">名前 (姓)</label>
          <%= f.text_field :last_name, class: "form-control", autofocus: true, autocomplete: "last_name", placeholder: "例) 山田" %>
        </div>

        <div class="form-group">
          <label for="first_name">名前 (名)</label>
          <%= f.text_field :first_name, class: "form-control", autofocus: true, autocomplete: "first_name", placeholder: "例) 花子" %>
        </div>

        <div class="form-group">
          <label for="last_name_kana">フリガナ (セイ)</label>
          <%= f.text_field :last_name_kana, class: "form-control", autofocus: true, autocomplete: "last_name_kana", placeholder: "例) ヤマダ" %>
        </div>

        <div class="form-group">
          <label for="first_name_kana">フリガナ (メイ)</label>
          <%= f.text_field :first_name_kana, class: "form-control", autofocus: true, autocomplete: "first_name_kana", placeholder: "例) ハナコ" %>
        </div>

        <div class="form-group">
          <label for="email">メールアドレス</label>
          <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder: "例) nagano@cake" %>
        </div>

        <div class="form-group">
          <label for="postal_code">郵便番号 (ハイフンなし)</label>
          <%= f.text_field :postal_code, class: "form-control", autofocus: true, autocomplete: "postal_code", placeholder: "例) 0000000" %>
        </div>

        <div class="form-group">
          <label for="address">住所</label>
          <%= f.text_field :address, class: "form-control", autofocus: true, autocomplete: "address", placeholder: "例) 長野県長野市大字南長野字幅下692-2" %>
        </div>

        <div class="form-group">
          <label for="telephone_number">電話番号 (ハイフンなし)</label>
          <%= f.telephone_field :telephone_number, class: "form-control", autofocus: true, autocomplete: "telephone_number", placeholder: "例) 0000000" %>
        </div>

        <div class="form-group">
          <label for="password">パスワード</label>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %>
          <%= f.password_field :password, class: "form-control", autocomplete: "new-password", placeholder: "例) XXXXXX" %>
        </div>

        <div class="form-group">
          <label for="password_confirmation">パスワード (確認用)</label>
          <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", placeholder: "例) XXXXXX" %>
        </div>

        <div class="form-group text-center">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-md-6 offset-md-3">
      <div class="alert alert-light text-center font-weight-bold bg-secondary text-white" role="alert">
        <p class="mb-0">既に登録済みの方</p>
      </div>

      <%= render "public/shared/links" %> からログインしてください
    </div>
  </div>
</div>

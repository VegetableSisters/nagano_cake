<div class="container mt-4">
  <div class="row">
    <div class="col">
      <div class="alert alert-light text-center font-weight-bold bg-secondary text-white float-left" role="alert">
        <p class="mb-0">新規会員登録</p>
      </div>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :"名前" %>
      <div class="row">
        <div class="col">
          <%= f.label :"(姓)" %>
          <%= f.text_field :last_name, class: "form-control", autofocus: true, autocomplete: "last_name", placeholder: "山田" %>
        </div>
        <div class="col">
          <%= f.label :"(名)" %>
          <%= f.text_field :first_name, class: "form-control", autofocus: true, autocomplete: "first_name", placeholder: "花子" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :"フリガナ" %>
      <div class="row">
        <div class="col">
          <%= f.label :"(セイ)" %>
          <%= f.text_field :last_name_kana, class: "form-control", autofocus: true, autocomplete: "last_name_kana", placeholder: "ヤマダ" %>
        </div>
        <div class="col">
          <%= f.label :"(メイ)" %>
          <%= f.text_field :first_name_kana, class: "form-control", autofocus: true, autocomplete: "first_name_kana", placeholder: "ハナコ" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :メールアドレス %>
      <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder: "nagano@cake" %>
    </div>

    <div class="form-group">
      <%= f.label :"郵便番号(ハイフンなし)" %>
      <%= f.text_field :postal_code, class: "form-control", autofocus: true, autocomplete: "postal_code", placeholder: "0000000" %>
    </div>

    <div class="form-group">
      <%= f.label :"住所" %>
      <%= f.text_field :address, class: "form-control", autofocus: true, autocomplete: "address", placeholder: "長野県長野市大字南長野字幅下692-2" %>
    </div>

    <div class="form-group">
      <%= f.label :"電話番号(ハイフンなし)" %>
      <%= f.telephone_field :telephone_number, class: "form-control", autofocus: true, autocomplete: "telephone_number", placeholder: "0000000" %>
    </div>

    <div class="form-group">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
      <% end %>
      <%= f.password_field :password, class: "form-control", autocomplete: "new-password", placeholder: "XXXXXX" %>
    </div>

    <div class="form-group">
      <%= f.label :"パスワード(確認用)" %>
      <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", placeholder: "XXXXXX" %>
    </div>

    
    <div class="alert alert-light text-center font-weight-bold bg-secondary text-white float-left" role="alert">
      <p class="mb-0">既に登録済みの方</p>
    </div>
    </br>
    </br>
    </br>
    <%= render "public/shared/links" %> からログインしてください
  <% end %>
</div>

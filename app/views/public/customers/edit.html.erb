<%= form_with model: @customer, url: customers_information_path, local: true do |f| %>
  <div class="container">
    <div class="row">
      <strong>会員情報編集</strong>
    </div>

 <div class="form-row">
  <div class="form-group col-md-6">
    <%= f.label :"名前" %>
    <div class="input-group">
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
    </div>
  </div>
  <div class="form-group col-md-6">
    <%= f.label :"フリガナ" %>
    <div class="input-group">
      <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "form-control" %>
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "form-control" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :"郵便番号（ハイフンなし）" %>
  <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :"住所(ハイフンなし)" %>
  <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :"電話番号" %>
  <%= f.telephone_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :"メールアドレス" %>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
</div>


    <div class="form-group">
      <%= f.submit "編集内容を保存", class: "btn btn-success mb-3" %>
      <%= link_to "退会する", customers_confirm_path, class: "btn btn-danger mb-3", data: { confirm: "本当に退会しますか？" } %>
    </div>
  </div>
<% end %>

<div class="container">
<div class="row">
<strong>会員情報編集</strong>
</div>

<%= form_with model: @customer, url: customers_information_path, local:true do |f| %>

  <div class="form-group">
          <label for="last_name">名前 (姓)</label>
          <%= f.text_field :last_name, class: "form-control", autofocus: true, autocomplete: "last_name" %>
        </div>

        <div class="form-group">
          <label for="first_name">名前 (名)</label>
          <%= f.text_field :first_name, class: "form-control", autofocus: true, autocomplete: "first_name" %>
        </div>

        <div class="form-group">
          <label for="last_name_kana">フリガナ (セイ)</label>
          <%= f.text_field :last_name_kana, class: "form-control", autofocus: true, autocomplete: "last_name_kana" %>
        </div>

        <div class="form-group">
          <label for="first_name_kana">フリガナ (メイ)</label>
          <%= f.text_field :first_name_kana, class: "form-control", autofocus: true, autocomplete: "first_name_kana" %>
        </div>

        <div class="form-group">
          <label for="email">メールアドレス</label>
          <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="form-group">
          <label for="postal_code">郵便番号 (ハイフンなし)</label>
          <%= f.text_field :postal_code, class: "form-control", autofocus: true, autocomplete: "postal_code" %>
        </div>

        <div class="form-group">
          <label for="address">住所</label>
          <%= f.text_field :address, class: "form-control", autofocus: true, autocomplete: "address" %>
        </div>

        <div class="form-group">
          <label for="telephone_number">電話番号 (ハイフンなし)</label>
          <%= f.telephone_field :telephone_number, class: "form-control", autofocus: true, autocomplete: "telephone_number" %>
        </div>
  
  <%= f.submit "編集内容を保存", class: "btn btn-success mb-3" %>
  
  <%= link_to "退会する", customers_confirm_path, class: "btn btn-danger mb-3" %>

<% end %>
</div>
<div class="container">
<div class="row">
<strong>会員情報編集</strong>
</div>

<%= form_with model: @customer, url: customers_information_path, local:true do |f| %>

  <div class="field">
    <%= f.label :"郵便番号（ハイフンなし）" %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>
  
  <div class="field">
    <%= f.label :"住所(ハイフンなし)" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>
  
  <div class="field">
    <%= f.label :"電話番号" %>
    <%= f.telephone_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>
  
  <div class="field">
    <%= f.label :"メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <%= f.submit "編集内容を保存", class: "btn btn-success mb-3" %>
  
  <%= link_to "退会する", customers_confirm_path, class: "btn btn-danger mb-3" %>

<% end %>
</div>
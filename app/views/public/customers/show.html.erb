<div class="container">
  <div class="row">
    <div class="col text-center">
      <h2>マイページ</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-10">
      <div class="d-flex justify-content-start align-items-center mb-4">
        <strong class="mr-2">登録情報</strong>
        <%= link_to "編集する", customers_information_edit_path, class: "btn btn-success btn-sm" %>
      </div>

      <table class="table table-bordered bg-light">
        <tbody>
          <tr>
            <th width="20%">氏名</th>
            <td style="background-color: white;"><%= @customer.last_name %> <%= @customer.first_name %></td>
          </tr>
          <tr>
            <th>カナ</th>
            <td style="background-color: white;"><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td style="background-color: white;"><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td style="background-color: white;"><%= @customer.address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td style="background-color: white;"><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td style="background-color: white;"><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>

      <div class="d-flex justify-content-start align-items-center mb-4">
        <strong class="mr-2">配送先</strong>
        <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary btn-sm" %>
      </div>

      <div class="d-flex justify-content-start align-items-center mb-4">
        <strong class="mr-2">注文履歴</strong>
        <%= link_to "一覧を見る", orders_path, class: "btn btn-primary btn-sm" %>
      </div>
    </div>
  </div>
</div>

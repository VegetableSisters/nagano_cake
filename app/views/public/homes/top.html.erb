<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css"/>
<script src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>

<div class="container py-5">
  <div class="row mx-auto">
    <div class="col-lg-3 order-lg-1 order-2 mb-4">
      <div class="p-3 border rounded">
        <h5 class="mb-3">ジャンル</h5>
        <ul class="list-group list-group-flush">
          <% @genres.each do |genre| %>
            <li class="list-group-item py-2">
              <%= link_to genre.name, items_path(genre_id: genre.id) %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="col-lg-9 order-1">
      <div class="card mb-4">
        <div class="card-body d-flex flex-column">
          <p class="flex-grow-1">ようこそ、ながのCAKEへ！<br />
             このサイトは、ケーキ販売のECサイトです。<br />
             会員でない方も商品の閲覧はできますが、<br />
             購入には会員登録が必要です。
          </p>
        </div>
      </div>
      <div class="m-4 p-3">
        <h2>新着商品</h2>
        <div class="swiper-container">
        <div class="swiper-wrapper">
          <% @items.each do |item| %>
            <div class="swiper-slide">
              <div class="card h-100">
                <div class="card-body text-center">
                  <%= link_to item_path(item) do %>
                    <% if item.image.attached? %>
                      <%= image_tag item.image, class: "img-fluid" %>
                    <% else %>
                      <%= image_tag 'no_image', class: "img-fluid" %>
                    <% end %>
                  <% end %>
                  <h5 class="card-title mt-3">
                    <%= link_to item.name, item_path(item), class: "text-dark" %>
                  </h5>
                  <p class="card-text">￥<%= item.add_tax_price.to_s(:delimited) %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <div class="swiper-pagination"></div>
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
      </div>
        <div class="text-right mt-3">
          <%= link_to "全ての商品を見る", items_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>
<!--スワイパー-->
<%= javascript_pack_tag 'swiper' %>


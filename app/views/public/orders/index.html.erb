<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3>注文履歴一覧</h3>
      <table class="table">
        <tr>
          <td>注文日</td>
          <td>配送先</td>
          <td>注文商品</td>
          <td>支払い金額</td>
          <td>ステータス</td>
          <td>注文詳細</td>
        </tr>
        <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td><%= order.address %></td>
          <td>
            <ul class="list-unstyled">
              <% order.order_details.each do |order_detail| %>
                <li><%= order_detail.item.name %></li>
              <% end %>
            </ul>
          </td>
          <td><%= order.total_payment %>円</td>
          <td></td>
          <td><%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %></td>
        </tr>
        <% end %>
      </table>
      <div class="row">
        <div class="col">
          <%= link_to '注文一覧に戻る', customers_my_page_path, class: 'btn btn-secondary' %>
        </div>
      </div>
    </div>
  </div>
</div>

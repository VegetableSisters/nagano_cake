<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3>注文履歴詳細</h3>

      <div class="row">
        <div class="col-md-8">
          <h4>注文情報</h4>
          <div class="">
            <table class="table">
              <tr>
                <td>注文日</td>
                <td><%= @order.y_to_d %></td>
              </tr>
              <tr>
                <td>配送先</td>
                <td>〒<%= @order.postal_code + "　" + @order.address + "　" + @order.name %></td>
              </tr>
              <tr>
                <td>支払い方法</td>
                <td><%= @order.payment_method_i18n %></td>
              </tr>
              <tr>
                <td>ステータス</td>
                <td><%= t("enums.order.status.#{@order.status}") %></td>
              </tr>
            </table>
          </div>
        </div>

        <div class="col-md-4">
          <h4>請求情報</h4>
          <table class="table">
            <tr>
              <td>商品合計</td>
              <td><%= @cart_items_price %>円</td>
            </tr>
            <tr>
              <td>配送料</td>
              <td><%= @order.shipping_cost %>円</td>
            </tr>
            <tr>
              <td>ご請求額</td>
              <td><%= @order.total_payment %>円</td>
            </tr>
          </table>
        </div>
      </div>

      <div class="row">
        <div class="col">
          <h4>注文内容</h4>
          <table class="table">
            <tr>
              <td>商品</td>
              <td>単価(税込)</td>
              <td>個数</td>
              <td>小計</td>
            </tr>
            <% @order_details.each do |order_detail| %>
              <tr>
                <td><%= order_detail.item.name %></td>
                <td><%= order_detail.item.add_tax_price %>円</td>
                <td><%= order_detail.amount %>個</td>
                <td><%= order_detail.amount * order_detail.item.add_tax_price %>円</td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>

      <div class="row">
        <div class="col">
          <%= link_to '注文履歴に戻る', orders_path, class: 'btn btn-secondary' %>
        </div>
      </div>
    </div>
  </div>
</div>

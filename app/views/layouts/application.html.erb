<!DOCTYPE html>
<html>
<head>
  <title>NaganoCake</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <script src="https://kit.fontawesome.com/28e899c482.js" crossorigin="anonymous"></script>
  <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  <link href="https://fonts.googleapis.com/css2?family=Kaisei+Tokumin:wght@500&family=Kiwi+Maru:wght@500&family=Shippori+Mincho:wght@500&display=swap" rel="stylesheet">
  <style>
    header {
      background-color: #D3CBC1;
      padding: 10px 0;
    }
    .footer {
      height: 100px;
    }
    .footer-top {
      height: 30px;
      background-color: white;
    }
    .footer-bottom {
      height: 70px;
      background-color: #D3CBC1;
    }
    .navbar-nav {
      margin-left: auto;
    }
    .navbar-brand-container {
      display: flex;
      align-items: center;
    }
    .logo-img {
      height: 120px; 
    }
    .logo-text {
      font-family: 'Shippori Mincho', sans-serif;
      font-size: 120%; 
      margin-left: 10px;
      color: #000000;
    }
    .navbar-nav .nav-item {
      margin-left: 10px;
    }
    .custom-button {
      background-color: #91816e;
      border-color: #91816e; 
      color: #fff;
    }
    
    .custom-button:hover {
      background-color: #6E574B;
      border-color: #6E574B;
      color: #fff;
    }
  </style>
</head>
<body>
  <header>
    
<nav class="navbar navbar-expand-lg navbar-light">
  <div class="container">
    <div class="navbar-brand-container">
      <%= link_to root_path do %>
        <%= image_tag("logo.png", alt: "ながのCAKE ロゴ", class: "logo-img") %>
      <% end %>
      <span class="logo-text">ながのCAKE</span>
    </div>

    <ul class="navbar-nav">
      <% if admin_signed_in? %>
        <!--メッセージ-->
        <li class="nav-item">
          <span>管理者さん、ようこそ！</span>
        </li>
        <!--管理者-->
        <li class="nav-item">
          <%= link_to "商品一覧", admin_items_path, class: "btn custom-button" %>
        </li>
        <li class="nav-item">
          <%= link_to "会員一覧", admin_customers_path, class: "btn custom-button" %>
        </li>
        <li class="nav-item">
          <%= link_to "注文履歴一覧", admin_root_path, class: "btn custom-button" %>
        </li>
        <li class="nav-item">
          <%= link_to "ジャンル一覧", admin_genres_path, class: "btn custom-button" %>
        </li>
        <li class="nav-item">
          <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn custom-button" %>
        </li>

      <% elsif customer_signed_in? %>
        <!--メッセージ-->
        <li class="nav-item">
          <span><%= current_customer.last_name %> <%= current_customer.first_name %>さん、ようこそ！</span>
        </li>
        <!--会員-->
        <li class="nav-item">
          <%= link_to "マイページ", customers_my_page_path, class: "btn custom-button" %>
        </li>
        <li class="nav-item">
          <%= link_to "商品一覧", items_path, class: "btn custom-button" %>
        </li>
        <li class="nav-item">
          <%= link_to "カート", cart_items_path, class: "btn custom-button" %>
        </li>
        <li class="nav-item">
          <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "btn custom-button" %>
        </li>

      <% else %>
        <!--ゲスト-->
        <li class="nav-item">
          <span>ゲストさん、ようこそ！</span>
        </li>
        <li class="nav-item">
          <%= link_to "About", about_path, class: "btn custom-button" %>
        </li>
        <li class="nav-item">
          <%= link_to "商品一覧", items_path, class: "btn custom-button" %>
        </li>
        <li class="nav-item">
          <%= link_to "カート", cart_items_path, class: "btn custom-button" %>
        </li>
        <li class="nav-item">
          <%= link_to "ログイン", new_customer_session_path, class: "btn custom-button" %>
        </li>
      <% end %>
    </ul>
  </div>
</nav>


<!--検索機能-->
<div class="container mt-4">
  <%= form_with url: items_path, method: :get, local: true do |f| %>
    <div class="row">
      <div class="col d-flex justify-content-end">
        <div class="input-group w-auto">
          <%= f.text_field :q, class: "form-control", placeholder: "商品名で検索", aria_label: "Recipient's username", aria_describedby: "button-addon2" %>
          <div class="input-group-append">
            <%= button_tag(type: "submit", class: "btn btn-outline-secondary", id: "button-addon2") do %>
              <i class="fas fa-search"></i>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
  </header>

  <%= yield %>
  <div class="footer">
    <div class="footer-top"></div>
    <div class="footer-bottom"></div>
  </div>
</body>
</html>

<%= form_with model: @customer, url: admin_customer_path(@customer), local: true do |f| %>
  <div class="container">
    <div class="row">
      <h3><%= "#{@customer.last_name} #{@customer.first_name} さんの会員情報編集" %></h3>
    </div>
    <div class="form-row">
      <table class="table table-bordered bg-light">
        <tbody>
          <tr>
            <th>会員ID</th>
            <td style="background-color: white;"><%= @customer.id %></td>
          </tr>
          <tr>
            <th>名前</th>
            <td style="background-color: white;">
              <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %>
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
            </td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td style="background-color: white;">
              <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "form-control" %>
              <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "form-control" %>
            </td>
          </tr>
          <tr>
            <th>郵便番号（ハイフンなし）</th>
            <td style="background-color: white;">
              <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "form-control" %>
            </td>
          </tr>
          <tr>
            <th>住所（ハイフンなし）</th>
            <td style="background-color: white;">
              <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control" %>
            </td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td style="background-color: white;">
              <%= f.telephone_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class: "form-control" %>
            </td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td style="background-color: white;">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td style="background-color: white;">
              <div class="form-check form-check-inline">
                <%= f.radio_button :is_deleted, false, class: "form-check-input" %>
                <%= f.label :is_deleted_false, '退会', class: "form-check-label" %>
              </div>
              <div class="form-check form-check-inline">
                <%= f.radio_button :is_deleted, true, class: "form-check-input" %>
                <%= f.label :is_deleted_true, '有効', class: "form-check-label" %>
              </div>
            </td>
          </tr>
        </tbody>
      </table>

      <div class="form-group">
        <%= f.submit "変更を保存", class: "btn btn-success mb-3" %>
      </div>
    </div>
  </div>
<% end %>


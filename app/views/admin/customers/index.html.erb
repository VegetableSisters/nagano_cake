<div class="container">
  <div class="row">
    <div class="col text-center">
      <strong class="mr-2">会員一覧</strong>
    </div>
  </div>



<table class="table">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= customer.last_name %> <%= customer.first_name %></td>
        <td><%= customer.email %></td>
        <td><!-- ステータス --></td>
      </tr>
    <% end %>
  </tbody>
</table>


</div>
 
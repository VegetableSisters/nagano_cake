<div class="container">
  <h3>注文履歴詳細</h3>
  <div class="row">
    <div class="col-12">
       <% first_order_detail = @order_details.first %>
      <% if first_order_detail.present? %>
        <table class="table">
          <tr>
            <th>購入者</th>
            <td><%= link_to @order.name, admin_customers_path %></td>
          </tr>
          <tr>
            <th>注文日</th>
            <td><%= first_order_detail.order.created_at.strftime("%Y/%m/%d") %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td><%= "〒" + first_order_detail.order.postal_code + first_order_detail.order.address %></td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= first_order_detail.order.payment_method_i18n %></td>
          </tr>
          <tr>
            <th>注文ステータス</th>
            <td>
              <%= form_with model: first_order_detail.order, url: admin_order_path(first_order_detail.order), method: :patch do |f| %>
                <%= f.select :status, ["入金待ち","入金確認", "製作中", "発送準備中" ,"発送済み"] %>
                <%= f.submit "更新", class: "btn btn-success btn-sm" %>
              <% end %>
            </td>
          </tr>
        </table>
      <% end %>
    </div>

    <div class="col-12">
      <div class="row">
        <div class="col-md-8">
          <table class="table">
            <thead>
              <tr class="bg-light">
                <th>商品名</th>
                <th>単価（税込）</th>
                <th>数量</th>
                <th>小計</th>
                <th>製作ステータス</th>
              </tr>
            </thead>
            <tbody>
              <% @order_details.each do |order_detail| %>
                <tr>
                  <td><%= order_detail.item.name %></td>
                  <td><%= order_detail.item.price %>円</td>
                  <td><%= order_detail.amount %>個</td>
                  <td><%= order_detail.amount * order_detail.item.price %>円</td>
                  <td>
                    <%= form_with model: order_detail, url: admin_order_detail_path(order_detail), method: :patch do |f| %>
                      <%= f.select :making_status, ["着手不可", "製作待ち", "製作中", "製作完了"] %>
                      <%= f.submit "更新", class: "btn btn-success btn-sm" %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <div class="col-md-4">
          <table class="table">
            <tr>
              <th>商品合計</th>
              <td><%= @order.total_payment %>円</td>
            </tr>
            <tr>
              <th>送料</th>
              <td><%= @order.shipping_cost %>円</td>
            </tr>
            <tr>
            <tr>
              <th>請求合計</th>
              <td><%= @order.total_payment + @order.shipping_cost %>円</td>
            </tr>
          </table>
        </div>
      </div>
    </div>


      <div class="row">
        <div class="col">
          <%= link_to '注文履歴に戻る', admin_root_path, class: 'btn btn-secondary' %>
        </div>
      </div>

    </div>
  </div>
</div>

            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
        <body>
          <% @order_details.each do |order_detail| %>
          <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td>
              <%= form_with model: order_detail, url: admin_order_detail_path(order_detail) do |f| %>
                
                <%= f.submit "更新", class:"btn btn-success" %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </body>
      <table>
    </div>

    <div class"col-4">
      <table>
        <thead>
          <tr>
            <th>商品合計</th>
            <td>円</td>
          </tr>

          <tr>
            <th>送料</th>
            <td><円</td>
          </tr>

          <tr>
            <th>請求合計</th>
            <td>円</td>
          </tr>
        </thead>
      </table>
    </div>
  </div>

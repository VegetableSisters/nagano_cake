<div class="container">
  <h3>注文履歴詳細</h3>
  <div class="row">
    <div class="col-10">
      <table class="table">
          <tr>
            <th>購入者</th>
            <td></td>
          </tr>

          <tr>
            <th>注文日</th>
            <td></td>
          </tr>

          <tr>
            <th>配送先</th>
            <tdtd>
          </tr>

          <tr>
            <th>支払方法</th>
            <td></td>
          </tr>

          <tr>
            <th>注文ステータス</th>
            <td>
              <%= form_with model: @order, url: admin_order_path(@order) do |f| %>
                <%= f.submit "更新", class: "btn btn-success" %>
              <% end %>
            </td>
          </tr>
      </table>
    </div>

    <div class="col-9">
      <table class="table table-bordered">

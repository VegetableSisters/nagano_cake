  <div class="offset-1 col">
    <h3><strong class="bg-light">ジャンル編集</strong></h3>
  </div>
  
  <div class="col-lg-7 my-4">
  <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>

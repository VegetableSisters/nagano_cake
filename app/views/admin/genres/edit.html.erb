<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header text-center">
          <h3>ジャンル編集</h3>
        </div>
        <div class="card-body">
          <%= form_with model: @genre, url: admin_genre_path, method: :patch, class: 'form-horizontal' do |f| %>
            <div class="form-group row">
              <%= f.label :name, 'ジャンル名', class: 'col-sm-3 col-form-label' %>
              <div class="col-sm-9">
                <%= f.text_field :name, placeholder: 'ジャンル名', class: 'form-control' %>
              </div>
            </div>
            <div class="form-group row">
              <div class="col-sm-9 offset-sm-3">
                <%= f.submit '変更保存', class: 'btn btn-success' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

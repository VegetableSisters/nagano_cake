<div class="container">
  <div class="">
    <div class="offset-1 col">
      <h3><strong class="bg-secondary text-light">ジャンル一覧・追加</strong></h3>
    </div>
    
    <%= form_with model: @genre, url: '/admin/genres', method: :post do |f| %>
    <div class="row">
      <div class="col-md-4 mb-3">
        <label class="form-label">ジャンル名</label>
        <%= f.text_field :name, class: 'form-control', placeholder: 'ジャンル名' %>
      </div>
      <div class="col-md-4 mb-3">
        <%= f.submit '新規登録', class: 'btn btn-success' %>
      </div>
    </div>
    <% end %>
    
    <table class="table">
      <thead>
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
    
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to '編集する', edit_admin_genre_path(genre), class: "btn btn-sm btn-success"  %></td>
        </tr>
        <% end %>
      </tbody>
    
    </table>
  </div>
</div>

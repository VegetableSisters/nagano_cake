<h1>ジャンル一覧・追加</h1>

<%= form_with model: @genre, url: '/admin/genres', method: :post do |f| %>
  <div class="d-flex">
    <div>ジャンル名</div>
    <div><%= f.text_field :name, placeholder: 'ジャンル名' %></div>
    <div><%= f.submit '新規登録' %></div>
  </div>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>
<% @genres.each do |genre| %>
  <tbody>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to '編集する', edit_admin_genre_path(genre) %></td>
    </tr>
  </tbody>
<% end %>
</table>

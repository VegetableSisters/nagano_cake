
<div class="container">
  <div class="">
    <div class="offset-1 col">
      <h3><strong class="bg-light">ジャンル一覧・追加</strong></h3>
    </div>
    <div class="col-lg-7 my-4">
    <%= form_with model: @genre, url: '/admin/genres', method: :post do |f| %>
      <div class="d-flex justify-content-between">
        <div>ジャンル名</div>
        <div><%= f.text_field :name, class: 'form-control', placeholder: 'ジャンル名' %></div>
        <div><%= f.submit '新規登録', class: 'btn btn-success' %></div>
      </div>
    <% end %>
    </div>
    
    <div class="col-5">
      <table class="table">
      <thead>
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
    
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td class="margin-left: 20px;"><%= link_to '編集する', edit_admin_genre_path(genre), class: "btn btn-sm btn-success"  %></td>
        </tr>
        <% end %>
      </tbody>
    
    </table>
    </div>
  </div>
</div>
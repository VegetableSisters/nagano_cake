<div class="container mt-4">
  <div class="col text-center">
    <h2 class="mr-2">商品詳細</h2>
  </div>

  <div class="row justify-content-center mb-4">
    <div class="col-md-6">
      <% if @item.image.attached? %>
        <%= image_tag @item.image, class: "img-fluid rounded" %>
      <% else %>
        <%= image_tag 'no_image', class: "img-fluid rounded" %>
      <% end %>
    </div>
  </div>

  <table class="table table-bordered">
    <tbody>
      <tr>
        <th>商品名</th>
        <td><%= @item.name %></td>
      </tr>
      <tr>
        <th>商品説明</th>
        <td><%= @item.introduction %></td>
      </tr>
      <tr>
        <th>ジャンル</th>
        <td>
          <% if @item.genre.present? %>
            <%= @item.genre.name %>
          <% else %>
            ジャンルを登録してください
          <% end %>
        </td>
      </tr>
      <tr>
        <th>税込価格（税抜き価格）</th>
        <td><%= @item.add_tax_price.to_s(:delimited) %>円 / <%= @item.price %>円</td>
      </tr>
      <tr>
        <th>販売ステータス</th>
        <td>
          <% if @item.is_active %>
            <span class="badge badge-success">販売中</span>
          <% else %>
            <span class="badge badge-secondary">販売停止中</span>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>

  <div class="text-center mt-4">
    <%= link_to '編集', edit_admin_item_path(@item), class: "btn btn-primary" %>
  </div>
</div>
